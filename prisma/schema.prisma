generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int         @id @default(autoincrement())
  email         String      @unique
  password      String
  nickname      String
  role          Role        @default(APPLICANT)
  refreshToken  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  resumes       Resume[]
  recruiterLogs ResumeLog[] @relation("Recruiter")
}

model Resume {
  id             Int         @id @default(autoincrement())
  userId         Int
  title          String
  content        String
  supportStatus  String      @default("APPLY")
  supportReason  String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  user           User        @relation(fields: [userId], references: [id])
  resumeLogs     ResumeLog[]
}

model ResumeLog {
  id               Int       @id @default(autoincrement())
  resumeId         Int
  recruiterId      Int
  oldSupportStatus String
  newSupportStatus String
  reason           String
  createdAt        DateTime @default(now())
  resume           Resume   @relation(fields: [resumeId], references: [id])
  recruiter        User     @relation("Recruiter", fields: [recruiterId], references: [id])
}

enum Role {
  APPLICANT
  RECRUITER
}
